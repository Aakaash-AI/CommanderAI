{
  "name": "commander-ai-ollama",
  "version": "0.1.0",
  "description": "Commander AI Desktop Application",
  "author": "Aakaash",
  "main": "electron/main.js",
  "scripts": {
    "build-client": "cd client && npm run build",
    "build:win": "npm run build-client && electron-builder --win",
    "start": "electron electron/main.js"
  },
  "dependencies": 
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.commander.ai",
    "productName": "Commander AI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "server/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    }
  }
}
